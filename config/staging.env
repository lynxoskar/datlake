# Staging Environment Configuration
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Staging database settings
DB_POSTGRES_HOST=staging-db.internal
DB_POSTGRES_PORT=5432
DB_POSTGRES_DB=ducklakedb_staging
DB_POSTGRES_USER=ducklake_user
DB_POSTGRES_PASSWORD=staging_secure_password

# Connection pool for higher load
DB_POSTGRES_MIN_CONNECTIONS=5
DB_POSTGRES_MAX_CONNECTIONS=20

# Staging storage settings  
STORAGE_MINIO_ENDPOINT=staging-minio.internal:9000
STORAGE_MINIO_ACCESS_KEY=staging_access_key
STORAGE_MINIO_SECRET_KEY=staging_secret_key
STORAGE_MINIO_SECURE=true

# Staging-specific buckets
STORAGE_DEFAULT_BUCKET=ducklake-staging-data
STORAGE_BACKUP_BUCKET=ducklake-staging-backup
STORAGE_TEMP_BUCKET=ducklake-staging-temp

# Enhanced monitoring for staging
MONITORING_OPENLINEAGE_URL=https://staging-lineage.company.com
MONITORING_OPENLINEAGE_API_KEY=staging_lineage_key
MONITORING_METRICS_ENABLED=true

# Enable most features for testing
FEATURE_ENABLE_ASYNC_PROCESSING=true
FEATURE_ENABLE_BATCH_OPTIMIZATION=true
FEATURE_ENABLE_MEMORY_MONITORING=true
FEATURE_ENABLE_PERFORMANCE_TRACKING=true
FEATURE_ENABLE_PROMETHEUS_METRICS=true
FEATURE_ENABLE_HEALTH_CHECKS=true
FEATURE_ENABLE_ERROR_TRACKING=true
FEATURE_ENABLE_DATA_COMPRESSION=true
FEATURE_ENABLE_AUDIT_LOGGING=true

# Production-like rate limiting
SECURITY_RATE_LIMIT_REQUESTS=500
SECURITY_RATE_LIMIT_WINDOW=60
SECURITY_RATE_LIMIT_BURST=750 