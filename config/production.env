# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Production database settings
DB_POSTGRES_HOST=prod-db.internal
DB_POSTGRES_PORT=5432
DB_POSTGRES_DB=ducklakedb
DB_POSTGRES_USER=ducklake_prod_user
# Password should be set via secrets management in production
# DB_POSTGRES_PASSWORD=

# Optimized connection pool for production
DB_POSTGRES_MIN_CONNECTIONS=10
DB_POSTGRES_MAX_CONNECTIONS=50
DB_POSTGRES_CONNECTION_TIMEOUT=10.0
DB_POSTGRES_COMMAND_TIMEOUT=30.0

# Production storage settings with encryption
STORAGE_MINIO_ENDPOINT=prod-minio.internal:9000
STORAGE_MINIO_ACCESS_KEY=prod_access_key
# Secret should be set via secrets management
# STORAGE_MINIO_SECRET_KEY=
STORAGE_MINIO_SECURE=true
STORAGE_MINIO_REGION=us-west-2

# Production buckets
STORAGE_DEFAULT_BUCKET=ducklake-prod-data
STORAGE_BACKUP_BUCKET=ducklake-prod-backup
STORAGE_TEMP_BUCKET=ducklake-prod-temp

# Larger file limits for production
STORAGE_MAX_FILE_SIZE=1073741824  # 1GB
STORAGE_MULTIPART_THRESHOLD=67108864  # 64MB
STORAGE_MAX_CONCURRENCY=20

# Production monitoring - REQUIRED
MONITORING_OPENLINEAGE_URL=https://lineage.company.com
# API key should be set via secrets management
# MONITORING_OPENLINEAGE_API_KEY=
MONITORING_METRICS_ENABLED=true
MONITORING_METRICS_PORT=9090

# Strict memory monitoring
MONITORING_MEMORY_THRESHOLD_WARNING=0.75
MONITORING_MEMORY_THRESHOLD_CRITICAL=0.85
MONITORING_MEMORY_CHECK_INTERVAL=10.0

# Performance thresholds
MONITORING_SLOW_QUERY_THRESHOLD=0.5
MONITORING_REQUEST_TIMEOUT=15.0

# Production queue settings
QUEUE_BATCH_SIZE=50
QUEUE_POLL_INTERVAL=2
QUEUE_WORKER_COUNT=5
QUEUE_WORKER_TIMEOUT=30.0

# Enable all production features
FEATURE_ENABLE_ASYNC_PROCESSING=true
FEATURE_ENABLE_BATCH_OPTIMIZATION=true
FEATURE_ENABLE_MEMORY_MONITORING=true
FEATURE_ENABLE_PERFORMANCE_TRACKING=true
FEATURE_ENABLE_PROMETHEUS_METRICS=true
FEATURE_ENABLE_HEALTH_CHECKS=true
FEATURE_ENABLE_ERROR_TRACKING=true
FEATURE_ENABLE_S3_ENCRYPTION=true
FEATURE_ENABLE_DATA_COMPRESSION=true
FEATURE_ENABLE_BACKUP_AUTOMATION=true
FEATURE_ENABLE_AUTHENTICATION=true
FEATURE_ENABLE_AUTHORIZATION=true
FEATURE_ENABLE_AUDIT_LOGGING=true
FEATURE_ENABLE_INPUT_VALIDATION=true
FEATURE_ENABLE_RATE_LIMITING=true

# Strict production rate limiting
SECURITY_RATE_LIMIT_REQUESTS=100
SECURITY_RATE_LIMIT_WINDOW=60
SECURITY_RATE_LIMIT_BURST=120

# Production CORS settings
SECURITY_CORS_ORIGINS=https://app.company.com,https://dashboard.company.com
SECURITY_CORS_METHODS=GET,POST,PUT,DELETE
SECURITY_CORS_HEADERS=Content-Type,Authorization,X-API-Key 