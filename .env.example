# DuckLake Configuration Example
# Copy this to .env and modify the values as needed

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DB_POSTGRES_HOST=localhost
DB_POSTGRES_PORT=5432
DB_POSTGRES_DB=ducklakedb
DB_POSTGRES_USER=postgres
DB_POSTGRES_PASSWORD=postgrespassword

# DuckLake-specific Configuration
# Metadata schema in the catalog database
DB_DUCKLAKE_METADATA_SCHEMA=main
# Name of the attached catalog database
DB_DUCKLAKE_METADATA_CATALOG=ducklake_metadata
# Enable encryption for data storage
DB_DUCKLAKE_ENCRYPTED=false
# Number of rows for data inlining optimization
DB_DUCKLAKE_DATA_INLINING_ROW_LIMIT=0
# Connect to a specific snapshot version (optional)
DB_DUCKLAKE_SNAPSHOT_VERSION=
# Connect to a snapshot at a specific time (optional)
DB_DUCKLAKE_SNAPSHOT_TIME=
# Connect in read-only mode
DB_DUCKLAKE_READ_ONLY=false

# DuckLake Connection Retry Settings
DB_DUCKLAKE_CONNECTION_RETRIES=3
DB_DUCKLAKE_CONNECTION_RETRY_DELAY=2.0
DB_DUCKLAKE_CONNECTION_TIMEOUT=30.0

# Storage Configuration (MinIO/S3)
STORAGE_MINIO_ENDPOINT=localhost:9000
STORAGE_MINIO_ACCESS_KEY=minioadmin
STORAGE_MINIO_SECRET_KEY=minioadmin
STORAGE_MINIO_SECURE=false
STORAGE_MINIO_REGION=us-east-1
STORAGE_DEFAULT_BUCKET=ducklake-data
STORAGE_TEMP_BUCKET=ducklake-temp

# Feature Flags
FEATURE_ENABLE_S3_ENCRYPTION=false
FEATURE_ENABLE_DATA_COMPRESSION=true
FEATURE_ENABLE_BACKUP_AUTOMATION=false

# Production Configuration Example
# For production, use stronger passwords and enable security features:
# DB_POSTGRES_PASSWORD=your-strong-password
# STORAGE_MINIO_SECRET_KEY=your-strong-secret-key
# DB_DUCKLAKE_ENCRYPTED=true
# STORAGE_MINIO_SECURE=true
# FEATURE_ENABLE_S3_ENCRYPTION=true
# FEATURE_ENABLE_BACKUP_AUTOMATION=true
# DEBUG=false
# ENVIRONMENT=production 